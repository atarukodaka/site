<h2>Series</h2>
<% sitemap.resources.group_by {|p| p.data.series }.each do |series, pages| %>
  <% next if series.to_s == "" %>
  <% index_page = pages.select {|p| p.data.layout == "series_index"}.first %>
  <% series_str = "<strong>【" + h(series) + "】</strong>" %>
  <%= (index_page.nil?) ? series_str: link_to(series_str, index_page.url) %><br>

  <% pages.sort {|a, b| a.url <=> b.url }.each do |page| %>
    [<%= get_series_number(page)%>] <%= link_to(h(page.data.title), page.url) %><br>
  <% end %>
<% end %>


<h2>Recent Updated</h2>
<% select_html_pages.sort {|a, b| b.modified_at <=> a.modified_at}.first(10).each do |page| %>
  <% title = page.data.combined_title %>
  <%= link_to(h(page.data.title), page.url) %>
  <%= page.modified_at.strftime("%Y/%m/%d %H:%M:%S %Z") %><br>
<% end %>

