  <h2>Articles</h2>
      <% sitemap.resources.select {|page| page.data.layout == "article"}.each do |page| %>
	<% title = (page.data.series) ? page.data.series : "" %>
	<% title = page.data.title %>
	<%= link_to(h(title), page.url) %><br>
      <% end %>

  <h2>Series</h2>
      <% sitemap.resources.group_by {|p| p.data.series }.each do |series, pages| %>
        <% next if series.to_s == "" %>
        <% index_page = pages.select {|p| p.data.layout == "series_index"}.first %>
	<% series_str = "<strong>【" + h(series) + "】</strong>" %>
        <%= (index_page.nil?) ? series_str: link_to(series_str, index_page.url) %><br>
        <% pages.each do |page| %>
          <% next if page.data.layout != "series" %>
	  [<%= get_series_number(page)%>] <%= link_to(h(page.data.title), page.url) %><br>
        <% end %>
      <% end %>

