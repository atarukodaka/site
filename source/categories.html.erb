---
title: Categories
layout: page
---

<% blog.categories.each do |category, pages | %>
  <% next if category.to_s == "" %>
  <h2 id="<%= h(category) %>"><%= h(category) %></h2>
    <ul>
    <% pages.each do |page| %>
      <li><%= link_to(h(page.data.title), page) %></li>
    <% end %>
    </ul>
  </li>
<% end %>


